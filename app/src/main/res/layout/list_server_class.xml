<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/joining_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@color/page_color">

    <ImageButton
        android:id="@+id/dummy_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:background="@drawable/background_class"
        android:padding="10dp"
        android:src="@drawable/ic_repo_24"
        app:tint="@color/white_constant"
        android:contentDescription="@string/list_contentDescription" />

    <TextView
        android:id="@+id/tv_ClassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@id/ll_groupdetails"
        android:layout_toEndOf="@id/dummy_icon"
        android:ellipsize="end"
        android:fontFamily="@font/inter_medium"
        android:maxLines="2"
        android:paddingStart="1dp"
        android:paddingEnd="15dp"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        app:drawableEndCompat="@drawable/ic_right_arrow" />


    <LinearLayout
        android:id="@+id/ll_groupdetails"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ClassAdmission"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_small"
            android:text="@string/list_admission"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/white_constant"/>

        <Button
            android:id="@+id/btn_ClassJoin"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_small"
            android:text="@string/list_join"
            android:fontFamily="@font/inter_medium"
            android:textAllCaps="false"
            android:textColor="@color/white_constant"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
