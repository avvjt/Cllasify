<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Opposite person chat layout -->
    <RelativeLayout
        android:id="@+id/rightChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_MyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="10dp"
            android:autoLink="web"
            android:background="@drawable/sent_message_background"
            android:elevation="1dp"
            android:fontFamily="@font/inter_regular"
            android:padding="12dp"
            android:textColor="@color/btn_text_white"
            android:textColorLink="@color/grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvMyDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_MyMessage"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/tv_MyMessage"
            android:textColor="@color/black"
            android:textSize="10sp" />

    </RelativeLayout>


</RelativeLayout>