<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="794dp"
    android:layout_height="1123dp"
    tools:context=".Activities.Result_Activity">


    <Button
        android:id="@+id/btn_generate_pdf"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:background="@drawable/button_solid_unfollow"
        android:elevation="2dp"
        android:text="Generate Result"
        android:textColor="@color/black_text_result" />

    <RelativeLayout
        android:id="@+id/student_result"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_generate_pdf"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="#EAEDF2"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/student_result_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:text="School name"
                android:textAppearance="@style/school_text" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:gravity="top"
                android:text="Date - 20.1.23"
                android:textAppearance="@style/large_text" />

            <TextView
                android:id="@+id/schl_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/school_name"
                android:gravity="top"
                android:text="The following is the statement of the marks and grade obtained by"
                android:textAppearance="@style/bio" />


            <TextView
                android:id="@+id/test_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/schl_text"
                android:layout_marginStart="10dp"
                android:layout_marginTop="70dp"
                android:text="Test name"
                android:textAppearance="@style/mid_text" />


            <TextView
                android:id="@+id/senior_scho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/test_name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/txt_bg"
                android:padding="20dp"
                android:text="SENIOR SCHOOL CERTIFICATE EXAMINATION"
                android:textAppearance="@style/inner_text" />


            <TextView
                android:id="@+id/class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/schl_text"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="10dp"
                android:text="Class name"
                android:textAppearance="@style/mid_text" />


            <TextView
                android:id="@+id/classNumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/class_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/txt_bg"
                android:padding="20dp"
                android:text="Class XI"
                android:textAppearance="@style/inner_text" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/classNumb"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/user_bg">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_UserProfilePic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/maharaji" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="25dp"

                        android:layout_toEndOf="@+id/civ_UserProfilePic">

                        <TextView
                            android:id="@+id/studentName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student Name"
                            android:textAppearance="@style/title" />

                        <TextView
                            android:id="@+id/student_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/studentName"
                            android:layout_centerInParent="true"
                            android:text="John Doe"
                            android:textAppearance="@style/value" />


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/user_bg">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="25dp">

                        <TextView
                            android:id="@+id/studentRoll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student Roll no."
                            android:textAppearance="@style/title" />

                        <TextView
                            android:id="@+id/student_Roll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/studentRoll"
                            android:layout_centerInParent="true"
                            android:text="10"
                            android:textAppearance="@style/value" />


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/user_bg">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="25dp">

                        <TextView
                            android:id="@+id/grandTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grand total"
                            android:textAppearance="@style/title" />

                        <TextView
                            android:id="@+id/grand_Total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/grandTotal"
                            android:layout_centerInParent="true"
                            android:text="788"
                            android:textAppearance="@style/value" />


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/user_bg">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="25dp">

                        <TextView
                            android:id="@+id/percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Percentage"
                            android:textAppearance="@style/title" />

                        <TextView
                            android:id="@+id/percentage_marks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/percentage"
                            android:layout_centerInParent="true"
                            android:text="88%"
                            android:textAppearance="@style/value" />


                    </RelativeLayout>


                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/student_result_info"
            android:layout_marginTop="20dp"
            android:background="@drawable/txt_bg" />


    </RelativeLayout>


</RelativeLayout>