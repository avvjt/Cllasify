<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="794dp"
    android:layout_height="1123dp"
    tools:context=".Activities.Result_Activity">


    <Button
        android:id="@+id/btn_generate_pdf"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:background="@drawable/button_solid_unfollow"
        android:elevation="2dp"
        android:text="Generate Result"
        android:textColor="@color/black_text_result" />

    <RelativeLayout
        android:id="@+id/student_result"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_generate_pdf"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="#EAEDF2"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/student_result_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="top"
                android:text="School name"
                android:textAppearance="@style/school_text" />

            <TextView
                android:id="@+id/result_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:gravity="top"
                android:text="Date - 20.1.23"
                android:textAppearance="@style/large_text" />

            <TextView
                android:id="@+id/schl_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/school_name"
                android:gravity="top"
                android:text="The following is the statement of the marks and grade obtained by"
                android:textAppearance="@style/bio" />


            <TextView
                android:id="@+id/test_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/schl_text"
                android:layout_marginStart="10dp"
                android:layout_marginTop="70dp"
                android:text="Test name"
                android:textAppearance="@style/mid_text" />


            <TextView
                android:id="@+id/senior_scho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/test_name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/txt_bg"
                android:padding="20dp"
                android:text="SENIOR SCHOOL CERTIFICATE EXAMINATION"
                android:textAppearance="@style/inner_text" />


            <TextView
                android:id="@+id/class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/schl_text"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="10dp"
                android:text="Class name"
                android:textAppearance="@style/mid_text" />


            <TextView
                android:id="@+id/class_numb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/class_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/txt_bg"
                android:padding="20dp"
                android:text="Class XI"
                android:textAppearance="@style/inner_text" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/class_numb"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/user_bg">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_UserProfilePic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/maharaji" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="25dp"

                        android:layout_toEndOf="@+id/civ_UserProfilePic">

                        <TextView
                            android:id="@+id/studentName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student Name"
                            android:textAppearance="@style/title" />

                        <TextView
                            android:id="@+id/student_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/studentName"
                            android:layout_centerInParent="true"
                            android:text="John Doe"
                            android:textAppearance="@style/value" />


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/user_bg">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="25dp">

                        <TextView
                            android:id="@+id/studentRoll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student Roll no."
                            android:textAppearance="@style/title" />

                        <TextView
                            android:id="@+id/roll_numb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/studentRoll"
                            android:layout_centerInParent="true"
                            android:text="10"
                            android:textAppearance="@style/value" />


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/user_bg">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="25dp">

                        <TextView
                            android:id="@+id/grandTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grand total"
                            android:textAppearance="@style/title" />

                        <TextView
                            android:id="@+id/marks_by"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/grandTotal"
                            android:layout_centerInParent="true"
                            android:text="788"
                            android:textAppearance="@style/value" />


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/user_bg">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/percentageTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Percentage"
                            android:textAppearance="@style/title" />

                        <TextView
                            android:id="@+id/gradeTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/percentageTV"
                            android:gravity="center"
                            android:text="&amp;Grade"
                            android:textAppearance="@style/title" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/gradeTV"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="88%"
                                android:textAppearance="@style/value" />

                            <TextView
                                android:id="@+id/grade"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" | A+"
                                android:textAppearance="@style/value" />

                        </LinearLayout>


                    </RelativeLayout>


                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/student_result_info"
            android:layout_marginTop="20dp"
            android:background="@drawable/txt_bg"
            android:padding="10dp">


            <LinearLayout
                android:id="@+id/masterLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:weightSum="6">


                <!--First layout layout -->
                <LinearLayout
                    android:id="@+id/firstLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--Subject textview -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Subjects"
                        android:textAlignment="center"
                        android:textAppearance="@style/mid_text"
                        android:textSize="16sp" />

                </LinearLayout>


                <!--Sec layout -->
                <LinearLayout
                    android:id="@+id/SecPart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--upper layout -->
                    <LinearLayout
                        android:id="@+id/upperLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--Full marks textview -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Full marks"
                            android:textAlignment="center"
                            android:textAppearance="@style/mid_text"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!--bottom layout -->
                    <LinearLayout
                        android:id="@+id/bottomLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <!--lastone layout -->
                        <LinearLayout
                            android:id="@+id/lastoneLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <!--Subject textview -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Theory"
                                android:textAlignment="center"
                                android:textAppearance="@style/valTV"
                                android:textSize="12sp" />

                        </LinearLayout>
                        <!--lastsec layout -->
                        <LinearLayout
                            android:id="@+id/lastsecLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <!--Project textview -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Project"
                                android:textAlignment="center"
                                android:textAppearance="@style/valTV"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!--Third layout -->
                <LinearLayout
                    android:id="@+id/ThirdPart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--upper layoutt -->
                    <LinearLayout
                        android:id="@+id/upperLayoutt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--Full marks textview -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Pass marks"
                            android:textAlignment="center"
                            android:textAppearance="@style/mid_text"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!--bottom layoutt -->
                    <LinearLayout
                        android:id="@+id/bottomLayoutt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <!--lastone layoutt -->
                        <LinearLayout
                            android:id="@+id/lastoneLayoutt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <!--Subject textview -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Theory"
                                android:textAlignment="center"
                                android:textAppearance="@style/valTV"
                                android:textSize="12sp" />

                        </LinearLayout>
                        <!--lastsec layoutt -->
                        <LinearLayout
                            android:id="@+id/lastsecLayoutt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <!--Project textview -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Project"
                                android:textAlignment="center"
                                android:textAppearance="@style/valTV"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <!--Forth layout -->
                <LinearLayout
                    android:id="@+id/ForthPart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--upper layouttt -->
                    <LinearLayout
                        android:id="@+id/upperLayouttt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--Marks textview -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Marks"
                            android:textAlignment="center"
                            android:textAppearance="@style/mid_text"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!--bottom layouttt -->
                    <LinearLayout
                        android:id="@+id/bottomLayouttt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <!--lastone layouttt -->
                        <LinearLayout
                            android:id="@+id/lastoneLayouttt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <!--Subject textview -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Theory"
                                android:textAlignment="center"
                                android:textAppearance="@style/valTV"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!--lastsec layouttt -->
                        <LinearLayout
                            android:id="@+id/lastsecLayouttt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <!--Project textview -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Project"
                                android:textAlignment="center"
                                android:textAppearance="@style/valTV"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!--Fifth layout -->
                <LinearLayout
                    android:id="@+id/FifthPart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--first vertical -->
                    <LinearLayout
                        android:id="@+id/firstvertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--Total textview -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Total"
                            android:textAlignment="center"
                            android:textAppearance="@style/mid_text"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!--sec vertical -->
                    <LinearLayout
                        android:id="@+id/secvertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--In figure textview -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="In figures"
                            android:textAlignment="center"
                            android:textAppearance="@style/valTV"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!--third vertical -->
                    <LinearLayout
                        android:id="@+id/thirdvertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--In words textview -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="In words"
                            android:textAlignment="center"
                            android:textAppearance="@style/valTV"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <!--Six layout -->
                <LinearLayout
                    android:id="@+id/SixPart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--Subject textview -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Subject \nGrade"
                        android:textAlignment="center"
                        android:textAppearance="@style/mid_text"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/subjectResultList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/masterLayout" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>