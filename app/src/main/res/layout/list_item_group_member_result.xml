<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/res_student"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_color"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="6dp">

    <TextView
        android:id="@+id/rollTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/members_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rollTV"
        android:orientation="horizontal"
        android:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_UserProfilePic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/maharaji" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_classGroupTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical"
                android:text="User Name"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_unique_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical"
                android:text="UserName"
                android:textColor="@color/text_background_color"
                android:textSize="15sp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>