<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_Group"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@color/page_color"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_toStartOf="@id/memberDelete"
        android:id="@+id/members_search">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_UserProfilePic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/maharaji" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:fontFamily="@font/inter_medium"
                android:text="User Name"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:id="@+id/tv_classGroupTitle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_background_color"
                android:fontFamily="@font/inter_medium"
                android:text="UserName"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:id="@+id/tv_unique_userName"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/memberDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        style="@style/SelectableItemBackgroundBorderless"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_trash_24"/>

    </RelativeLayout>