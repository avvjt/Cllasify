<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_list_group_search">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_margin="15dp">

        <RelativeLayout
            android:id="@+id/ll_groupdetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/schImg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/demo_sch" />

            <RelativeLayout
                android:id="@+id/shortDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/schImg">


                <androidx.cardview.widget.CardView
                    android:id="@id/schLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="center"
                        android:src="@drawable/default_school_logo" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_groupname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/schLogo"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:id="@+id/tv_GroupStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_toEndOf="@id/tv_groupname">

                    <TextView
                        android:id="@+id/numbStudents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. of Students: "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/numbStudentsInt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/numbStudents" />

                    <TextView
                        android:id="@+id/numbTeachers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/numbStudents"
                        android:layout_centerVertical="true"
                        android:text="No. of Teachers: "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/numbTeachersInt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/numbStudentsInt"
                        android:layout_toEndOf="@id/numbTeachers" />

                </RelativeLayout>


            </RelativeLayout>

            <Button
                android:id="@+id/showAllClassesBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/shortDescription"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-black"
                android:text="Show All Classes"
                android:textAllCaps="false"
                android:textColor="@color/black" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>

