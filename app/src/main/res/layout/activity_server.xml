<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.Server_Activity">

    <!--swipeRefreshLayout we don't need as of now-->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" />


    <com.discord.panels.OverlappingPanelsLayout
        android:id="@+id/overlapping_panels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/page_background_color">


        <!-- Start Panel       -->
        <RelativeLayout
            android:id="@+id/start_panel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/page_color"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">


            <RelativeLayout
                android:id="@+id/chatItemAndGroupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/cardRecChatIMG"
                    style="@style/SelectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardFriendRec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="2dp">

                        <ImageButton
                            android:id="@+id/ib_FrndsList"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@color/icon_background"
                            android:src="@drawable/ic_baseline_message_24" />

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <TextView
                    android:id="@+id/groupName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/cardRecChatIMG"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_semibold"
                    android:maxLines="2"
                    android:paddingStart="20dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chatItemAndGroupName"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/groupRVs"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <!--Public server-->
                    <TextView
                        android:id="@+id/tv_UserPublicTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_UserPublicGroupTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!--Others server-->
                    <TextView
                        android:id="@+id/tv_OtherTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_OtherPublicGroupTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/addNewTopicButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@color/icon_background"
                            android:scaleType="center"
                            android:src="@drawable/ic_plus_16" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Friends Section -->
                <LinearLayout
                    android:id="@+id/friendsSection"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/groupRVs">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewFriendsNameList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp" />


                </LinearLayout>

                <!-- Group Section-->
                <LinearLayout
                    android:id="@+id/groupSection"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/friendsSection"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewClassList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

        <!-- Center Panel       -->
        <RelativeLayout
            android:id="@+id/center_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/page_color"
            android:orientation="vertical"
            android:visibility="visible">

            <!--add group join group button show when new user login-->
            <LinearLayout
                android:id="@+id/ll_AddJoinGrp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:elevation="50dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_caddgroup"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/button_gradient"
                    android:fontFamily="@font/inter_medium"
                    android:letterSpacing="0.1"
                    android:text="Create server"
                    android:textColor="@color/btn_text_white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_cjoingroup"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/button_gradient"
                    android:fontFamily="@font/inter_medium"
                    android:letterSpacing="0.1"
                    android:text="Join server"
                    android:textColor="@color/btn_text_white"
                    android:textSize="20sp" />
            </LinearLayout>

            <!--Upper heading-->
            <LinearLayout
                android:id="@+id/ll_ChatDoubtDashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_ChatDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/action_bar"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:background="@color/page_color"
                        android:orientation="horizontal"
                        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                        <ImageButton
                            android:id="@+id/swipe_left"
                            style="@style/SelectableItemBackgroundBorderless"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_swipe_menux"
                            app:tint="@color/iconSecondaryColor" />


                        <ImageButton
                            android:id="@+id/swipe_right"
                            style="@style/SelectableItemBackgroundBorderless"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/ic_swipe_menu"
                            app:tint="@color/iconSecondaryColor" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/chatDoubtLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/action_bar"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/subjectName"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/inter_medium"
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/view_divider"
                            android:elevation="1dp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/subjectName">


                            <!--Chat showing RecyclerView-->

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_ChatDashboard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_above="@+id/ll_bottom_send"
                                android:paddingStart="10dp"
                                android:paddingEnd="1dp" />

                            <!--Chat box sending message layout-->
                            <RelativeLayout
                                android:id="@+id/ll_bottom_send"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="20dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <EditText
                                    android:id="@+id/et_ctext"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="8dp"
                                    android:layout_toStartOf="@+id/sendDoubt"
                                    android:background="@drawable/chat_input_background"
                                    android:focusable="true"
                                    android:hint="@string/hint_edittext"
                                    android:imeOptions="actionDone"
                                    android:importantForAutofill="no"
                                    android:inputType="textCapSentences|textMultiLine"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp"
                                    android:textColor="@color/text_color"
                                    android:textColorHint="@color/text_background_color" />

                                <RelativeLayout
                                    android:id="@+id/sendDoubt"
                                    style="@style/SelectableItemBackgroundBorderless"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp">

                                    <ImageButton
                                        android:id="@+id/ib_doubtSubmit"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:background="@color/transparent"
                                        android:elevation="2dp"
                                        android:src="@drawable/ic_question_24" />

                                    <ImageButton
                                        android:id="@+id/ib_csubmit"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:background="@color/transparent"
                                        android:elevation="2dp"
                                        android:src="@drawable/ic_send_24"
                                        android:visibility="gone" />

                                </RelativeLayout>

                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>


                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <!-- End Panel       -->
        <RelativeLayout
            android:id="@+id/end_panel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/page_color"
            android:visibility="gone">

            <!-- End Panel scrollview   -->
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbarSize="1dp">

                <LinearLayout
                    android:id="@+id/endPanelLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--primary options layout-->
                    <LinearLayout
                        android:id="@+id/onlyAdminLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/inter_semibold"
                            android:padding="10dp"
                            android:text="Favorite"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <!--server setting option-->
                        <LinearLayout
                            android:id="@+id/ib_servSettings"
                            style="@style/SelectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/background_server_setting"
                                android:padding="7dp"
                                android:src="@drawable/ic_settings_24"
                                app:tint="@color/btn_text_white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Server setting"
                                android:textColor="@color/text_color"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <!--attendances option-->
                        <LinearLayout
                            android:id="@+id/btn_lteachattend"
                            style="@style/SelectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/backgroud_attendances"
                                android:padding="7dp"
                                android:src="@drawable/ic_edit"
                                app:tint="@color/btn_text_white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Attendance"
                                android:textColor="@color/text_color"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <!--notifications option-->
                        <LinearLayout
                            android:id="@+id/btn_joinNotification"
                            style="@style/SelectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/backgroud_notification"
                                android:padding="7dp"
                                android:src="@drawable/ic_menu_notifications"
                                app:tint="@color/btn_text_white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Notification"
                                android:textColor="@color/text_color"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/view_divider" />

                    <!--Friends list recyclerview use in recent chat right panel-->
                    <LinearLayout
                        android:id="@+id/FriendListText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/FriendListTextt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="Friends"
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            android:visibility="gone" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/endPanelAllFriendsRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone"
                            app:fastScrollEnabled="false" />

                    </LinearLayout>

                    <!--Teachers list recyclerview-->
                    <LinearLayout
                        android:id="@+id/rightPanelMembs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/adminListText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="Teachers"
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            android:visibility="visible" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/adminList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:nestedScrollingEnabled="false"
                            app:fastScrollEnabled="false" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/view_divider" />

                    <!--Student list recyclerview-->
                    <LinearLayout
                        android:id="@+id/rightPanelMember"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/tv_GroupMember"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="Students"
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            android:visibility="gone" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_GrpMemberList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:nestedScrollingEnabled="false"
                            app:fastScrollEnabled="false" />

                    </LinearLayout>

                    <!--Exam and result button ; don't need-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_lteachexam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:text="Exam"
                            android:textColor="@color/text_color"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btn_lteachresult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:text="Result"
                            android:textColor="@color/text_color"
                            android:textSize="16sp"
                            android:visibility="gone" />


                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </com.discord.panels.OverlappingPanelsLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/page_color"
        android:visibility="gone"
        app:itemIconTint="@color/bottom_navigation_color"
        app:itemTextAppearanceActive="@style/BodyText.NavigationBar"
        app:itemTextAppearanceInactive="@style/BodyText.NavigationBar"
        app:itemTextColor="@color/bottom_navigation_color"
        app:labelVisibilityMode="selected"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
