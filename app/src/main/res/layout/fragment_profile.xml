<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_edit"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/ic_cancel"
            android:id="@+id/ib_EditProfile"
            android:layout_weight="2"
            android:background="@color/transparent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/account"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:src="@drawable/ic_logout"
            android:id="@+id/ib_Logout"
            android:background="@color/transparent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_title"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/prof_pic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:src="@drawable/maharaji" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/go_premium"
                        android:layout_margin="24dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/ic_premium"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:id="@+id/tv_User_Name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/online_status"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/tv_User_Status"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_title"
                android:id="@+id/ll_userContacts"
                android:orientation="vertical"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_usegr_intro"
                    android:text="@string/set_status"
                    android:textSize="22sp"
                    android:textColor="@color/light_black"
                    app:drawableStartCompat="@drawable/ic_status"
                    android:drawablePadding="20dp"
                    android:paddingBottom="25dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_user_intro"
                    android:text="@string/my_account"
                    android:textSize="22sp"
                    android:textColor="@color/light_black"
                    app:drawableStartCompat="@drawable/ic_account"
                    android:drawablePadding="20dp"
                    android:paddingBottom="25dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_us_intro"
                    android:text="@string/friend"
                    android:textSize="22sp"
                    android:textColor="@color/light_black"
                    app:drawableStartCompat="@drawable/ic_friends"
                    android:drawablePadding="20dp"
                    android:paddingBottom="25dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_usgr_intro"
                    android:text="@string/servers"
                    android:textSize="22sp"
                    android:textColor="@color/light_black"
                    app:drawableStartCompat="@drawable/ic_server"
                    android:drawablePadding="20dp"
                    android:paddingBottom="25dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_user_hint"
                    android:text="@string/notification"
                    android:textSize="22sp"
                    android:textColor="@color/light_black"
                    app:drawableStartCompat="@drawable/ic_noti"
                    android:drawablePadding="20dp"
                    android:paddingBottom="25dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_us"
                    android:text="@string/theme"
                    android:textSize="22sp"
                    android:textColor="@color/light_black"
                    app:drawableStartCompat="@drawable/ic_theme"
                    android:drawablePadding="20dp"
                    android:paddingBottom="25dp"/>


                <TextView
                    android:id="@+id/tv_user_hino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="20dp"
                    android:paddingBottom="25dp"
                    android:text="@string/privacy"
                    android:textColor="@color/light_black"
                    android:textSize="22sp"
                    app:drawableStartCompat="@drawable/ic_privicy" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_user_hio"
                    android:text="@string/help"
                    android:textSize="22sp"
                    android:textColor="@color/light_black"
                    app:drawableStartCompat="@drawable/ic_help"
                    android:drawablePadding="20dp"
                    android:paddingBottom="25dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_user_ntro"
                    android:text="@string/about"
                    android:textSize="22sp"
                    android:textColor="@color/light_black"
                    app:drawableStartCompat="@drawable/ic_about"
                    android:drawablePadding="20dp"
                    android:paddingBottom="25dp"/>

            </LinearLayout>



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>