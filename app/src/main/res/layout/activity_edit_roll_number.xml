<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.Edit_RollNumber">

    <Button
        android:id="@+id/btn_showStudentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/button_gradient"
        android:text="Show Student List"
        android:textColor="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_SiderollNumberList"
        android:layout_width="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/btn_showStudentList"
        android:layout_height="match_parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_rollNumberStudentList"
        android:layout_toEndOf="@+id/rv_SiderollNumberList"
        android:layout_below="@+id/btn_showStudentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>