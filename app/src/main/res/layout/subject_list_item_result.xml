<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_color"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_subjectTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/inter_medium"
        android:padding="2dp"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        app:drawableLeftCompat="@drawable/ic_hashtag_public" />

    <TextView
        android:id="@+id/obtained_marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/of"
        android:fontFamily="@font/inter_medium"
        android:padding="2dp"
        android:text="100"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/of"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/full_marks"
        android:fontFamily="@font/inter_medium"
        android:padding="2dp"
        android:text="/"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/full_marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:fontFamily="@font/inter_medium"
        android:padding="2dp"
        android:text="100"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="15sp" />

</RelativeLayout>
