<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@android:color/darker_gray"
    android:id="@+id/ll_ShowGroup"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_Group"
        android:layout_margin="2dp"
        android:background="@android:color/holo_green_dark"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textColor="@color/page_black"
        android:text="Group Name"
        android:textSize="16sp"
        android:layout_weight="2"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/ic_cancel"
        android:id="@+id/tv_GroupTitle"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:id="@+id/ib_AddGroup"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:src="@drawable/ic_add"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:id="@+id/ll_subGroup">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group1"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_cancel" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group2"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_cancel" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group3"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_cancel" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group4"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_cancel" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group5"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_cancel" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group6"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_cancel" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group7"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_cancel" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group8"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_cancel" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group9"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_cancel" />

    </LinearLayout>
</LinearLayout>