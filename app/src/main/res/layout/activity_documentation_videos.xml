<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_color"
    tools:context=".Activities.Settings.Documentation_Videos">



    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/page_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageButton
            android:id="@+id/btn_Back"
            style="@style/SelectableItemBackgroundBorderless"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/privacy_contentDescription"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="1dp"
            android:src="@drawable/ic_arrow_left_24"
            app:tint="@color/iconSecondaryColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Documentation Videos"
            android:textColor="@color/text_color"
            android:textSize="20sp" />
    </LinearLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_outline_gradient_btn"
        android:drawableStart="@drawable/onlinevideo"
        android:drawableEnd="@drawable/ic_right_arrow"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="This is a test question of how to do anything?"
        android:textAllCaps="false"
        android:textColor="#000000" />


    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_outline_gradient_btn"
        android:drawableEnd="@drawable/ic_right_arrow"
        android:paddingEnd="15dp"
        android:text="This is a test question of how to do anything?"
        android:textAllCaps="false"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_margin="10dp"
        android:background="@drawable/custom_outline_gradient_btn"
        android:drawableEnd="@drawable/ic_right_arrow"
        android:paddingEnd="15dp"
        android:text="This is a test question of how to do anything?"
        android:textAllCaps="false"
        android:textColor="#000000" />

</RelativeLayout>