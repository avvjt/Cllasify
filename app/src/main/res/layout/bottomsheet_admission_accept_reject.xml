<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottomsheet"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/tvs"
            android:padding="10dp">

            <TextView
                android:id="@+id/choosetxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student details"
                android:textSize="18sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/text_color"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>


            <!--Date layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of submission : "
                    android:fontFamily="@font/inter_medium_italic"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/text_color"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:fontFamily="@font/inter_medium_italic"/>


            </LinearLayout>

            <!--Name layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/text_color"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="16sp"/>


            </LinearLayout>

            <!--Date of birth layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/dob_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color"
                    android:text="Date of birth :" />

                <TextView
                    android:id="@+id/dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/inter_regular"/>


            </LinearLayout>

            <!--Fathers name layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/father_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Father's name :"
                    android:layout_weight="1"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_medium"/>

                <TextView
                    android:id="@+id/father_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_weight="1"/>


            </LinearLayout>

            <!--Mothers name layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/mother_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mather's name :"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/mother_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"/>


            </LinearLayout>

            <!--Address layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address :"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/inter_medium"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/text_color"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_regular"/>


            </LinearLayout>

            <!--Phone no layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone :"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/inter_medium"/>

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginStart="15dp"/>


            </LinearLayout>

            <!--Religion layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/religion_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Religion :"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/inter_medium"/>

                <TextView
                    android:id="@+id/religion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/inter_regular"/>


            </LinearLayout>

            <!--Cast layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/cast_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cast :"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/inter_medium"/>

                <TextView
                    android:id="@+id/cast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:layout_weight="1"/>


            </LinearLayout>

            <!--Result pdf-->
            <LinearLayout
                android:id="@+id/document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_doubt"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_margin="10dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/doc_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/pdf_pic" />

                <TextView
                    android:id="@+id/tv_pdfName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium_italic"
                    android:maxLines="2"
                    android:padding="5dp"
                    android:text="Result.pdf"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"/>



            </LinearLayout>

            <!--  Accept and Reject buttons -->
            <LinearLayout
                android:id="@+id/accept_reject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/page_color"
                android:orientation="horizontal"
                android:visibility="visible"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">


                <Button
                    android:id="@+id/btn_reject"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_solid_unfollow"
                    android:elevation="2dp"
                    android:text="Reject"
                    android:textColor="@color/text_color"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/btn_accept"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_solid_message"
                    android:elevation="2dp"
                    android:text="Accept"
                    android:textColor="@color/btn_text_black"
                    android:layout_margin="5dp"/>


            </LinearLayout>



        </LinearLayout>

    </ScrollView>






</RelativeLayout>