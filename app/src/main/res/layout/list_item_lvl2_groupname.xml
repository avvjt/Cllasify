<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@android:color/white"
    android:id="@+id/ll_ShowGroup"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_Group"
        android:layout_margin="2dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans_bold"
        android:text="Group Name"
        android:textSize="14sp"
        android:layout_weight="2"
        android:drawablePadding="4dp"
        android:id="@+id/tv_GroupTitle"
        app:drawableLeftCompat="@drawable/ic_hashtag_public"
        app:drawableTint="@color/purple"
        android:textAllCaps="true"
        android:letterSpacing="0.02" />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:id="@+id/ib_AddGroup"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:src="@drawable/ic_add"
        app:tint="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="14dp"
        android:layout_marginTop="2dp"
        android:id="@+id/ll_subGroup">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group1"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_regular"
            app:drawableLeftCompat="@drawable/ic_hashtag_public"
            android:textAllCaps="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group2"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_regular"
            app:drawableLeftCompat="@drawable/ic_hashtag_public"
            android:textAllCaps="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group3"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="15sp"
            app:drawableLeftCompat="@drawable/ic_hashtag_public"
            android:textAllCaps="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group4"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="15sp"
            app:drawableLeftCompat="@drawable/ic_hashtag_public"
            android:textAllCaps="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group5"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="15sp"
            app:drawableLeftCompat="@drawable/ic_hashtag_public"
            android:textAllCaps="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group6"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="15sp"
            app:drawableLeftCompat="@drawable/ic_hashtag_public"
            android:textAllCaps="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group7"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="15sp"
            app:drawableLeftCompat="@drawable/ic_hashtag_public"
            android:textAllCaps="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group8"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="15sp"
            app:drawableLeftCompat="@drawable/ic_hashtag_public"
            android:textAllCaps="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Group9"
            android:drawablePadding="8dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="15sp"
            app:drawableLeftCompat="@drawable/ic_hashtag_public"
            android:textAllCaps="false"/>

    </LinearLayout>
</LinearLayout>