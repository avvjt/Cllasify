<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Server.AttendanceFragment"
    android:background="@color/page_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                android:fontFamily="@font/inter_semibold"
                android:id="@+id/tv_titleAttendance"
                android:text="Attendance Portal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:fontFamily="@font/inter_medium"
                android:id="@+id/tv_groupName"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_subGroupName"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:fontFamily="@font/inter_medium"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_GrpMemberAttendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/btn_ShowAttendStatus"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_small"
                    android:text="Recent attendance"
                    android:textColor="@color/btn_text_white"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btn_CheckAttendHistory"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_small"
                    android:text="Attendance history"
                    android:textColor="@color/btn_text_white" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>









</LinearLayout>