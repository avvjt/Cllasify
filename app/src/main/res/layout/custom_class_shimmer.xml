<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_ShowGroup"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ClassTopics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/ll_Group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp">


            <TextView
                android:id="@+id/tv_classGroupTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/shimmer_color"
                android:ellipsize="end"
                android:fontFamily="@font/inter_medium"
                android:maxLines="2"
                android:padding="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/drops"
            android:layout_width="40dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/dropDownBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:src="@drawable/drop_down" />

            <ImageButton
                android:id="@+id/dropUpBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:src="@drawable/drop_up" />
        </RelativeLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="10dp"
            android:fontFamily="@font/inter_medium"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="7dp"
            android:background="@color/shimmer_color"
            android:paddingBottom="7dp"
            android:letterSpacing="0.02"
            android:textColor="@color/text_color"
            android:textAllCaps="false"
            android:textSize="15sp"
            app:drawableLeftCompat="@drawable/ic_hashtag_public" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter_medium"
        android:background="@color/shimmer_color"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:letterSpacing="0.02"
        android:textColor="@color/text_color"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:drawableLeftCompat="@drawable/ic_hashtag_public" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter_medium"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/shimmer_color"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:letterSpacing="0.02"
        android:textColor="@color/text_color"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:drawableLeftCompat="@drawable/ic_hashtag_public" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter_medium"
        android:background="@color/shimmer_color"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:letterSpacing="0.02"
        android:textColor="@color/text_color"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:drawableLeftCompat="@drawable/ic_hashtag_public" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter_medium"
        android:background="@color/shimmer_color"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:letterSpacing="0.02"
        android:textColor="@color/text_color"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:drawableLeftCompat="@drawable/ic_hashtag_public" />

    </androidx.cardview.widget.CardView>


</LinearLayout>