<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/req_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="50dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_height="50dp" />

    <RelativeLayout
        android:id="@+id/name_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/btn_Status"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/profilePicture">


    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/text_color"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_ReqDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="15sp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/reqAndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_toEndOf="@+id/profilePicture"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">



        <TextView
            android:id="@+id/tv_Groupinvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:maxLines="2"
            android:textColor="@color/text_color"
            android:textSize="14sp" />



    </LinearLayout>

    <Button
        android:id="@+id/btn_Status"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:background="@drawable/button_solid_unfollow"
        android:layout_centerInParent="true"
        android:elevation="2dp"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black" />

</RelativeLayout>
