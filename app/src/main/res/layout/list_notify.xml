<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="20dp"
    android:paddingTop="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:id="@+id/reqAndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:fontFamily="@font/inter_bold"/>

        <TextView
            android:id="@+id/tv_Groupinvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Requested to follow"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:fontFamily="@font/inter_medium"/>

        <TextView
            android:id="@+id/tv_ReqDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20h"
            android:visibility="gone"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_groupdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <Button
            android:id="@+id/tv_approve"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@drawable/button_small"
            android:text="Approve"
            android:textColor="@color/btn_text_white"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/tv_reject"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@drawable/button_stroke"
            android:text="Reject"
            android:textColor="@color/btn_text_black"
            android:layout_marginStart="5dp"
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout><!--
