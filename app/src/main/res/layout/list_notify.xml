<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:id="@+id/reqAndDate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:layout_centerHorizontal="true"
        android:layout_toStartOf="@+id/ll_groupdetails"
        android:layout_toEndOf="@+id/profilePicture"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_Groupinvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:maxLines="2"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_ReqDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20h"
            android:textSize="15sp"
            android:visibility="gone" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_groupdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <Button
            android:id="@+id/tv_approve"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@drawable/button_small"
            android:text="Approve"
            android:textColor="@color/btn_text_white"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/tv_reject"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@drawable/button_stroke"
            android:text="Reject"
            android:textColor="@color/btn_text_black"
            android:layout_marginStart="5dp"
            android:textAllCaps="false"/>

    </LinearLayout>

</RelativeLayout><!--
