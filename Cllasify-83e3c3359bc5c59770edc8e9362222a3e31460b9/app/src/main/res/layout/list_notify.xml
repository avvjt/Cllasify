<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:id="@+id/reqAndDate"
        android:layout_width="220dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/profilePicture">

        <TextView
            android:id="@+id/tv_Groupinvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="the_following_user has followed you and one another"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ReqDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Groupinvite"
            android:text="20h"
            android:textSize="15sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_groupdetails"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_toEndOf="@id/reqAndDate"
        android:orientation="vertical">

        <Button
            android:id="@+id/tv_approve"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/cust_corner"
            android:text="Approve"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tv_reject"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/cust_red_corner"
            android:text="Reject"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

